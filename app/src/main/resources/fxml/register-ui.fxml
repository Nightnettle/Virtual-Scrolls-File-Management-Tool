<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #34495e; -fx-padding: 50px;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vsas.controller.RegisterController">
    <VBox.margin>
        <Insets top="20" />
    </VBox.margin>

    <TextField fx:id="fullNameField" promptText="Full Name" prefWidth="300" prefHeight="40" style="-fx-font-size: 14px;" />
    <TextField fx:id="phoneNumberField" promptText="Phone Number" prefWidth="300" prefHeight="40" style="-fx-font-size: 14px;" />
    <TextField fx:id="emailField" promptText="Email" prefWidth="300" prefHeight="40" style="-fx-font-size: 14px;" />
    <TextField fx:id="useridField" promptText="User ID" prefWidth="300" prefHeight="40" style="-fx-font-size: 14px;" />
    <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="300.0" promptText="Password" style="-fx-font-size: 14px;" />
    <Button text="Register" onAction="#registerOnAction" prefWidth="300" prefHeight="50" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 10; -fx-background-radius: 10;"/>

</VBox>
