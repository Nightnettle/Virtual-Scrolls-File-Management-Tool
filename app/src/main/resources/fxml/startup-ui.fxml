<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 50px;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vsas.controller.StartupController">
    <VBox.margin>
        <Insets top="50" />
    </VBox.margin>
    <Button fx:id="registerButton" onAction="#registerOnAction" prefHeight="50" prefWidth="300" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 10; -fx-background-radius: 10;" text="Register" />
    <Button fx:id="loginAsGuestButton" onAction="#loginAsGuestOnAction" prefHeight="50" prefWidth="300" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 10; -fx-background-radius: 10;" text="Login as Guest" />
    <Button fx:id="loginButton" onAction="#loginOnAction" prefHeight="50" prefWidth="300" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 10; -fx-background-radius: 10;" text="Login" />
</VBox>
